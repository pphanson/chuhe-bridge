<div class='chuhe-monitor'>
    <nav class="chuhe-monitor-nav">
        <div class="nav-wrapper">
            <ul class='left'>
                <li><a id='chuhe-sensor-title' class="btn-flat dropdown-button waves-effect waves-light chuhe-card-btn" data-activates="chuhe-monitor-dropdown"><i class="mdi-navigation-arrow-drop-down right"></i></a>
                    <ul id='chuhe-monitor-dropdown' class="dropdown-content" style="width:100%">
                    </ul>
            </ul>
        </div>
    </nav>
    <div class='chuhe-monitor-content'>
        <div class='chuhe-monitor-top'>
            <div id='chuhe-realtime' class='chuhe-monitor-item chuhe-realtime'>
            </div>
            <div class='chuhe-monitor-item chuhe-3d'>
                <div class='chuhe-3d-title'>
                    <span><%= name + '传感器三维模型示意图'%></span>
                </div>
            </div>
        </div>
        <div class='chuhe-monitor-bottom'>
            <div class='chuhe-monitor-item chuhe-monitor-stats'>
                <div class='chuhe-current-stats'>
                    <%= currentStatsCard %>
                </div>

                <div class='chuhe-history-stats'>
                    <%= historyStatsCard %>
                </div>
            </div>
            <div class='chuhe-monitor-item chuhe-linechart'>
                <div class='chuhe-linechart-content'>
                </div>
                <div class='chuhe-linechart-legend'>
                    <div class='chuhe-linechart-title'>
                        <span>趋势分析图表</span>
                    </div>
                    <div class="chuhe-linechart-interaction">
                        <ul class='chuhe-linechart-value-switch'>
                            <% values.forEach(function(value){ %>
                                <li id='<%= value.name||value %>' class='chuhe-linechart-item'><span><%= value.text || value %></span></li>
                                <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
